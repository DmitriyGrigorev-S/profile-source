mixin menu(data)
    nav.menu(class= data.class)
        ul.menu__list
            li.menu__item.menu__item--laptop
                +logo({})
                button.menu__close(type="button")
                    span
            each item in data.items
                li.menu__item 
                    a.menu__link(href="#")= item.text

            li.menu__item.menu__item--tablet
                +dropdown({
                    head: {
                        text: '+7 (727) 232 93 60'
                    },
                    body: [
                        {text: '+7 (645) 654 23 30'},
                        {text: '+7 (978) 232 93 54'}
                    ]
                })
            li.menu__item.menu__item--tablet
                +dropdown({
                    class: 'dropdown--uppercase',
                    head: {
                        text: 'Каз'
                    },
                    body: [
                        {text: 'РУС'},
                        {text: 'EN'}
                    ]
                })
            li.menu__item.menu__item--mobile
                +button({
                    class: 'button--small header__shop',
                    typeButton: 'link',
                    text: 'интернет магазин',
                    icon: 'cart'
                })